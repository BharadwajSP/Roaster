<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<div>
<%= form_tag("/users",method: :get) do  %>
  <div class="fields">
    <input type = "text" name = 'name'/>
</div>

  <div class="actions">
    <input type = "submit" name = 'search'/>
</div>
<%end%>
</div>


<table>
  <thead>
    <tr>
        <th> UserName </th>
        <th> Employee ID </th>
        <th> Mobile Number </th>
        <th> Email </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.emp_code %></td>
        <td><%=  user.mobile_number %></td>
        <td><%= user.email %></td>

        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
